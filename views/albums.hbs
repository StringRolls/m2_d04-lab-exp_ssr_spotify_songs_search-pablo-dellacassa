<div class="album-list container">
  {{#each albums}}
    <div class="album-card">

      {{#if this.images}}
        <img src="{{this.images.2.url}}" alt="{{this.name}} cover" />
      {{else}}
        <img
          src="https://user-images.githubusercontent.com/25275745/82283218-ba9ec200-9963-11ea-9fc8-8408b57bef12.png"
          alt="{{this.name}}"
          style="width: 160px"
        />
      {{/if}}
      {{this.name}}

      <a href="/tracks/{{this.id}}">View tracks</a>
    </div>

  {{/each}}
</div>